# Quiz Master Environment Configuration
# Copy this file to .env and customize for your environment

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=quiz_platform
DB_USERNAME=root
DB_PASSWORD=password

# Service Ports
EUREKA_PORT=8761
API_GATEWAY_PORT=8080
AUTH_SERVICE_PORT=8081
QUESTION_BANK_SERVICE_PORT=8082
RESULT_SERVICE_PORT=8083

# Frontend Configuration  
FRONTEND_PORT=5173
FRONTEND_URL=http://localhost:5173

# JWT Configuration
JWT_SECRET=mySecretKey12345678901234567890123456789012345678901234567890
JWT_EXPIRATION_HOURS=24

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_ENABLED=false
LOG_FILE_PATH=./logs/quiz-master.log

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_QUIZ_TIMER=true
ENABLE_RESULT_PUBLICATION=true
ENABLE_GROUP_FILTERING=true

# Performance Settings
DB_CONNECTION_POOL_SIZE=10
HTTP_TIMEOUT_SECONDS=30
JWT_CACHE_ENABLED=true

# Development Settings
DEBUG_MODE=false
MOCK_DATA_ENABLED=false
API_DOCUMENTATION_ENABLED=true